{
  "extends": "airbnb-base",
  "rules": {
    "arrow-parens": "off",
    "linebreak-style": ["warn", "windows"],
    "func-names": "off",
    "space-before-function-paren": "off",
    "no-unused-vars": "off",
    "no-plusplus": "off",
    "no-mixed-operators": "off",
    "function-paren-newline": "warn",
    "no-restricted-syntax": "off"
  }
}
